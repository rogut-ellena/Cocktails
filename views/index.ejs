<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Coctails</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Caveat&family=Libre+Baskerville&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/main.css">

</head>

<body>

    <nav class="navbar navbar-expand navbar-light  d-flex justify-content-center fixed-top">
        <a class="navbar-brand  text-white" href="#"></a>
        <div class="d-flex justify-content-center">
            <form class="d-inline-flex" action="/submit" method="post">
                <input class="form-control mr-sm-2" type="text" name="searchName" placeholder="Find coctails by name"
                    aria-label="Search">
                <button class="btn btn-warning my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
        <div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1"
                    checked>
                <label class="form-check-label" for="exampleRadios1">
                    Default radio
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                <label class="form-check-label" for="exampleRadios2">
                    Second default radio
                </label>
            </div>
        </div>

    </nav>

    <div class="container content">

        <% if(locals.re){%>
            <div class="container row border border-white card-coctail p-5">
                
                <h1 class="p-2" style="text-align: center;">
                    <%= re.strDrink %>
                </h1>
                <div class="col-lg-6">
                    <h4 class="p-2" >Ingredients:</h4>
                    <ul>                        
                        <% for(var i=0; i < ingredients.length; i++){ %>
                            <% //console.log(ingredients) %>
                            
                                <li class="">
                                    <%= ingredients[i].measure %>of <%= ingredients[i].ingredient %>
                                </li>


                                <% } %>
                    </ul>
                    <h4 class="p-2" >Instructions:</h4>
                    <p class="p-2">
                        <%= re.strInstructions %>
                    </p>
                </div>
                <div class="col-lg-6 d-flex justify-content-center align-items-center">
                    <img src="<%= re.strDrinkThumb %>" alt="<%= re.strDrink %>"
                    style="border-radius: 50%; ">
                </div>
                

            </div>

            <%} else if (locals.coctailsByName) {%>


                
                    <% coctailsByName.forEach(element=> {%>
                        

                        <div class="container card-coctail row border border-white p-5">


                            <div col-12>
                                <h1 class="p-2" style="text-align: center;">
                                    <%= element.strDrink %>
                                </h1>
                            </div>

                            <div class="col-lg-6 col-xl-4 p-4">
                                <h4 class="p-2" >Ingredients:</h4>
                                <ul class=" ">

                                    <% for(var i=0; i < ingredients.length; i++){ %>
                                        <% //console.log(ingredients) %>
                                            <li >
                                                <%= ingredients[i].measure %>of <%= ingredients[i].ingredient %>
                                            </li>
                                            <% } %>
                                </ul>
                            </div>

                            <div class="p-2 col-lg-6 col-xl-4 d-flex justify-content-center">
                                <img src="<%= element.strDrinkThumb %>" alt="<%= element.strDrink %>"
                                    style="border-radius: 50%; ">
                            </div>
                            <div class="col-lg-12 col-xl-4 py-2 ps-4 ">
                                <h4 class="py-2 ps-4">Instructions:</h4>
                                <p class="ps-4">
                                    <%= element.strInstructions %>
                                </p>

                            </div>




                        </div>
                        <%}); %>
                

                <% } %>

    </div>


</body>

</html>